_pkgbasename=zlib
pkgname=lib32-$_pkgbasename
pkgver=1.2.7
pkgrel=1
pkgdesc='Compression library implementing the deflate compression method found in gzip and PKZIP (32-bit)'
arch=('x86_64')
license=('custom')
url="http://www.zlib.net/"
depends=('lib32-glibc')
makedepends=('gcc-multilib')
source=("http://zlib.net/current/zlib-${pkgver}.tar.gz")
md5sums=('60df6a37c56e7c1366cca812414f7b85')

build() {
    export CFLAGS="-march=i686 -m32 -fno-stack-protector"
    export CXXFLAGS="-march=i686 -m32 -fno-stack-protector"
    export LDFLAGS="-march=i686 -m32 -Wl,--as-needed"
    export PKG_CONFIG_PATH="/usr/lib32/pkgconfig"

    cd ${srcdir}/zlib-$pkgver
    ./configure --prefix=/usr --libdir=/usr/lib32
    make
}

package() {
    cd ${srcdir}/zlib-$pkgver
    make install DESTDIR=${pkgdir}
    rm -rf "${pkgdir}"/usr/{include,share,bin}
}